#!/bin/sh -e
# postinst script for emil-ui
#
# see: dh_installdeb(1)

# Source debconf library.
. /usr/share/debconf/confmodule



case "$1" in
    configure)

        db_get "emil-ui/eaas-backend-url"
        backend_url="$RET"
        db_get "emil-ui/stop-redirection-url"
        stop_redirection_url="$RET"
        mkdir -p /etc/emil
        cat << EOF > /etc/emil/emil-ui.json
{
  "eaasBackendURL": "$backend_url",
  "stopEmulatorRedirectURL": "$stop_redirection_url"
}
EOF

        COMMON_STATE=$(dpkg-query -f '${Status}' -W 'apache2.2-common' 2>/dev/null | awk '{print $3}' || true)

        if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
                . /usr/share/apache2/apache2-maintscript-helper
                apache2_invoke ensite emil-ui.conf || exit $?
        elif [ "$COMMON_STATE" = "installed" ] || [ "$COMMON_STATE" = "unpacked" ] ; then
                if [ -d /etc/apache2/sites-available/ -a ! -L /etc/apache2/sites-enabled/emil-ui.conf ]; then
                    ln -s ../sites-available/emil-ui.conf /etc/apache2/sites-enabled/emil-ui.conf
                fi
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac




# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.
#DEBHELPER#

exit 0
